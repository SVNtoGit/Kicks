<HBProfile>
	<Name>Milling Profile</Name>

	<QuestOrder>

		<CustomBehavior File="UserSettings" PullDistance="25" UseMount="True" LootMobs="True" />
		
		<!-- Copy and paste for every herb you have. You can also use this for prospecting - replace /cast milling with /cast prospecting -->
		
			 <While Condition="(GetItemCount(#####) &gt;= 5)" >
				<CustomBehavior File="RunMacro" Macro="/cast milling" />
				<CustomBehavior File="RunMacro" Macro="/use herbnamehere" />
			 </While>
		
		
		<CustomBehavior File="UserDialog" AllowBotStop="True" SoundCue="Exclamation" SoundCueInterval="1" Text="No More Herbs" />


	</QuestOrder>

</HBProfile>













































